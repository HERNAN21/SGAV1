    {
      "name": "Practicas",
      "item": [
        { "name": "Empresas", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }], "url": "{{base_url}}/practicas/empresas" } },
        { "name": "Convenios", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }], "url": "{{base_url}}/practicas/convenios" } },
        { "name": "Egresados", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }], "url": "{{base_url}}/practicas/egresados" } },
